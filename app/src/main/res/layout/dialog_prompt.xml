<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_prompt_bg">

    <TextView
        android:id="@+id/dialog_prompt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/dialog_prompt_top_bg"
        android:textSize="@dimen/textsize_normal"
        android:textColor="@color/text_gray"
        android:text="提示"/>

    <TextView
        android:id="@+id/dialog_prompt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/comm_view_height"
        android:layout_marginTop="1dp"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:textColor="@color/text_black"
        android:textSize="@dimen/textsize_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_prompt_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:background="@drawable/dialog_prompt_btn_left_selector"
            android:gravity="center"
            android:clickable="true"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/text_gray"
            android:text="取消"/>

        <TextView
            android:id="@+id/dialog_prompt_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:padding="12dp"
            android:background="@drawable/dialog_prompt_btn_right_selector"
            android:gravity="center"
            android:clickable="true"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/comm_blue"
            android:text="确定"/>

    </LinearLayout>

</LinearLayout>